{% extends 'base.html.twig' %}

{% block title %}Home {{ controller_name }}!{% endblock %}

{% block body %}

    <div class="row">

        {% for team in teams %}
            <div class="col-2">

                <div class="card">
                    <div class="front">
                        <img src="{{ team.logo }}" alt="" width="100%">
                    </div>
                    <div class="back dataLink" data-link="{{ path('team', {'idTeam': team.idOWL}) }}">
                       <h3> {{ team.name }}</h3>
<p>

</p>

                        Win : {{ team.stats["teamWin"] }}<br />
                        Tie : {{ team.stats["teamTie"] }}<br />
                        Lose  : {{ team.stats["teamLose"] }}<br />
                        {#LoseStrick  : {{ team.stats["teamLoseStrick"] }}<br />
                        WinStrick  : {{ team.stats["teamWinStrick"] }}<br />
                        teamTotal  : {{ team.stats["teamTotal"] }}<br />#}

                    </div>
                </div>


            </div>

        {% endfor %}

    </div>

{% endblock %}
